<!DOCTYPE html>
<html lang="pt-br">
<%- include('../partials/header.ejs') %>

    <body class="container-fluid">

        <div class="row d-flex">
            <%- include('../partials/nav.ejs') %>
                <div class="col-12 position-absolute menu-inferior">

                </div>
                <div class="col container-conteudo">
                    <div class="container-conteudo row justify-content-between">
                        <div class="saudacao col-10">
                            <h4>Bem vindo</h4>
                            <strong>
                                <h2>
                                    <%= user.nome %>
                                </h2>
                            </strong>
                            <p>IFNMG Campus Montes Claros - 45°C (Quente pra caramba) </p>
                        </div>
                        <div class="img-perfil col-2">
                            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRnrcsJrkoOqVa5zJ4dmMyzo0QU1vRzqGnObnm-KfFln7XGJlVoeQEVPAKo_GaYDR3OXJs&usqp=CAU"
                                alt="" width="100%">
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="img-perfil-mobile col-2">
                                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRnrcsJrkoOqVa5zJ4dmMyzo0QU1vRzqGnObnm-KfFln7XGJlVoeQEVPAKo_GaYDR3OXJs&usqp=CAU"
                                    alt="" width="100%">
                            </div>
                            <div class="saudacao-mobile col-7 d-flex align-items-center justify-content-end">
                                <strong>
                                    <h4>Olá </h4>
                                    <h2>
                                        <%= user.nome %>
                                    </h2>
                                </strong>
                            </div>
                        </div>

                        <div class="row controle-ar justify-content-center mt-5">
                            <div id="controle-individual" class="card col-8 p-2">
                                <div class="row justify-content-between pt-2 pb-2">
                                    <div class="col-5 identificacao d-flex align-items-center justify-content-start">
                                        <span id="span1">

                                            <strong>
                                                <%= predios[0].salas[0].nome %> - <%= predios[0].nome %>
                                            </strong>
                                        </span>
                                        <!-- <span><strong>Sala 17 - Prédio 04</strong></span> -->
                                    </div>

                                    <div class="col-2 onoff text-center">
                                        <span>
                                            <button class="btn" type="submit">ON</button>
                                        </span>
                                    </div>
                                    <div class="col-5 nome d-flex align-items-center justify-content-end">
                                        <span><strong>Temperatura Padrão: 22°C</strong></span>
                                    </div>
                                </div>
                                <div class="row justify-content-evenly infor-ar">
                                    <div class="col-5 ar1 d-flex justify-content-start" data-bs-target="#alterarAr"
                                        data-bs-toggle="modal">
                                        <p><strong>Philco</strong></p>
                                        <p class="temperatura"><strong>22 °C</strong></p>
                                    </div>
                                    <div class="col-auto d-flex divisoria justify-content-center">
                                        <div class="vr" style="height: 95%;"></div>
                                    </div>
                                    <div class="col-5 ar2 d-flex justify-content-start" data-bs-target="#alterarAr"
                                        data-bs-toggle="modal">
                                        <p><strong>Komeko</strong></p>
                                        <p class="temperatura"><strong>23 °C</strong></p>
                                    </div>
                                    <div class="modal fade" id="alterarAr" aria-hidden="true"
                                        aria-labelledby="alterarArLabel" tabindex="-1">
                                        <div class="modal-dialog modal-sm">
                                            <div class="modal-content d-flex justify-content-center">
                                                <div class="modal-body">
                                                    <div id="modal-temperatura" class="position-relative">
                                                        <div class="circle">
                                                            <div class="debug2">
                                                                <input id="rangeAr2" on class="form-control"
                                                                    value="18°C" type="text" min="18" max="23" step="1"
                                                                    onmousedown="return false;">
                                                            </div>
                                                            <div class="dot2"></div>
                                                        </div>
                                                    </div>
                                                    <div
                                                        class="excluir-bottom d-flex justify-content-around text-center mt-4">
                                                        <button onclick="altera()"
                                                            class="btn excluir-confirma">ALTERAR</button>
                                                        <button class="btn" data-bs-dismiss="modal">DESLIGAR</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="controleArMobile1 mt-5">
                            <div class="card-temperatura1 d-flex position-relative justify-content-center col-12">
                                <div class="card card-temperatura p-3 col-10">
                                    <div class="row">
                                        <h5 class="card-title d-inline col">Komeko</h5>
                                        <div class="form-check form-switch col-1">

                                            <input class="form-check-input" type="checkbox" role="switch"
                                                id="flexSwitchCheckDefault">
                                        </div>
                                    </div>
                                    <h6 class="card-subtitle mb-2">Prédio 01 - Sala 02</h6>

                                    <div class="circle-mobile1 mt-3 mb-0">
                                        <div class="debug-mobile1">
                                            <input id="rangeArMobile1" class="form-control" value="18°C" type="text"
                                                min="18" max="23" step="1" onmousedown="return false;" disabled>
                                        </div>
                                        <div class="dot-mobile1"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="controleArMobile2 mt-3">
                            <div class="card-temperatura2 d-flex position-relative justify-content-center col-12">
                                <div class="card card-temperatura2 p-3 col-10">
                                    <div class="row">
                                        <h5 class="card-title d-inline col">Philco</h5>
                                        <div class="form-check form-switch col-1">

                                            <input class="form-check-input" type="checkbox" role="switch"
                                                id="flexSwitchCheckDefault">
                                        </div>
                                    </div>
                                    <h6 class="card-subtitle mb-2">Prédio 01 - Sala 02</h6>

                                    <div class="circle-mobile2 mt-3 mb-0">
                                        <div class="debug-mobile2">
                                            <input id="rangeArMobile2" class="form-control" value="20°C" type="text"
                                                min="18" max="23" step="1" onmousedown="return false;" disabled>
                                        </div>
                                        <div class="dot-mobile2"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row predios mt-5 col-auto">
                            <select id="selectPredio" class="form-select">
                                <% predios.forEach(element=> { %>
                                    <option value="<%= element.id %>">
                                        <%= element.nome %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="row salas mt-5 justify-content-between">
                            <div class="modal fade" id="trocaSala" tabindex="-1" aria-labelledby="trocaSalaLabel"
                                aria-hidden="true">
                                <div class="modal-dialog modal-sm">
                                    <div class="modal-content">
                                        <div class="modal-body text-center">
                                            <h4>Deseja realmente trocar de sala?</h4>
                                            <div class="row d-flex justify-content-center mt-4">
                                                <div class="d-flex justify-content-around col-9">
                                                    <button class="btn col-auto">Trocar</button>
                                                    <button class="btn cancelar col-auto">Cancelar</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div id="salasContainer" class="row justify-content-between">
                                <% var index=0 %>
                                    <% predios[index].salas.forEach(element=> { %>
                                        <div onclick="trocaSala(this)" class="btn sala col-2 text-center p-2 col-auto">
                                            <%= element.nome %>
                                        </div>
                                        <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        </div>
        </div>

        <script>
            var predio1 = JSON.parse('<%- JSON.stringify(predios) %>');

            function trocaSala(aux) {
                var predioId = document.getElementById('selectPredio').value
                var predioSelecionado

                predio1.forEach(predio => {
                    if (predio.id == predioId) {
                        predioSelecionado = predio
                    }
                });

                console.log(predioSelecionado)
                document.getElementById('span1').innerHTML = ""
                var aux1 = document.createElement('strong')
                aux1.textContent = aux.textContent + " - " + predioSelecionado.nome
                document.getElementById('span1').appendChild(aux1)
            }
        </script>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

        <%- include('./scripts.ejs') %>

    </body>

</html>