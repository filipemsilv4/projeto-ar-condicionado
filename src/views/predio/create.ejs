<form method="POST" action="/predio/sala/store">
    <div class="modal fade" id="addSala" aria-hidden="true" aria-labelledby="adicionaUsuarioLabel"
        tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Nova Sala</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row justify-content-between">
                        <div class="col-6">
                            <label for="predio" class="form-label">Prédio*:</label>
                            <select id="selectPredio" name="predio" class="form-select" required>
                                <% predios.forEach(predio=> { %>
                                    <option value="<%= predio.id %>">
                                        <%= predio.nome %>
                                    </option>
                                    <% }) %>
                            </select>
                            <div>
                                <a href="" class="fw-lighter fs-6">Criar novo prédio</a>
                            </div>
                        </div>
                        <div class="col-7 mt-3">
                            <label for="nome" class="form-label">Nome*:</label>
                            <input name="nome" autocomplete="off" type="text" class="form-control" id="nome" required>
                        </div>
                    </div>
                    
                
                    <div class="row col-12 d-flex justify-content-end salvar">
                        <div class="mt-5 d-flex justify-content-between">
                            <div>
                                <input type="checkbox" name="gerenciarSala" id="gerenciarSala" checked>
                                <label for="gerenciarSala"> 
                                    <span class="italic">
                                        Prosseguir para o gerenciamento da sala
                                    </span>
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary col-2">Salvar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </form>