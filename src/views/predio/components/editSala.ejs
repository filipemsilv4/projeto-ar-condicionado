<div class="modal fade" id="editSala_<%= salaId %>" aria-hidden="true" tabindex="-1">
    <form action="POST" method="post">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Editar sala</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row justify-content-between">
                        <div class="col-6">
                            <label for="nome" class="form-label">Nome*:</label>
                            <input name="nome" autocomplete="off" type="text" class="form-control" id="nome" required>
                        </div>
                        <div class="col-3">
                            <label for="tipo" class="form-label">Tipo*:</label>
                            <select name="tipo" id="tipo" class="form-select">
                                <option value="Padrão">Padrão</option>
                                <option value="Administrador">Administrador</option>
                                <option value="Manutenção">Manutenção</option>
                            </select>
                        </div>
                        <div class="col-3">
                            <label for="usuario" class="form-label">Usuário*:</label>
                            <input name="nickname" autocomplete="off" type="text" class="form-control" id="usuario"
                                required>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-8">
                            <label for="email" class="form-label">Email*:</label>
                            <input name="email" autocomplete="off" type="email" class="form-control" id="email"
                                required>
                        </div>
                        <div class="col-4">
                            <label for="senha" class="form-label">Senha*:</label>
                            <input name="senha" autocomplete="off" type="text" class="form-control" id="senha" required>
                        </div>
                    </div>
                    <!-- <div class="col-4 mt-4" id="escolha-curso">
                        <label for="curso" class="form-label">Área(s):</label><br>
                        <div id="areaUsuario" hidden>
                        </div>
                        <button id="btnCurso" type="button" class="btn" data-bs-target="#escolheCurso"
                            data-bs-toggle="modal">Escolher</button>
                    </div> -->
                    <div class="row col-12 d-flex justify-content-end salvar">
                        <button type="submit" class="btn btn-primary mt-5 col-2">Salvar</button>
                    </div>
                </div>
            </div>
        </div>


    </form>
</div>